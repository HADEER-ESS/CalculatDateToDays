<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="11dp"
        android:text="CALCULATE YOUR"
        android:textAlignment="center"
        android:textColor="@color/TextMainColor"
        android:textSize="27sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="17dp"
        android:layout_marginVertical="17dp"
        android:text="AGE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="bold"
        android:background="@color/textBlueColor"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="9dp"
        android:text="IN DAYS"
        android:textAlignment="center"
        android:textColor="@color/TextMainColor"
        android:textSize="23sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:paddingVertical="7dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/GrayButtonColor"
        android:textSize="23sp"
        android:text="SELECT DATE" />
    <TextView
        android:id="@+id/dateTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="DD/MM/YYYY"
        android:textAlignment="center"
        android:textColor="@color/RedTextColor"
        android:textSize="21sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:padding="17px"
        android:text="Selected Date"
        android:textAlignment="center"
        android:textColor="@color/GrayButtonColor"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/DateInMinutesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/RedTextColor"
        android:textSize="29sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:text="In days till date"
        android:textAlignment="center"
        android:textColor="@color/GrayButtonColor"
        android:textSize="19sp" />
</LinearLayout>